{
    "name": "less2html",
    "displayName": "less2html",
    "description": "generate html from less",
    "version": "0.0.1",
    "publisher": "wanhuan",
    "repository": {
        "type": "git",
        "url": "https://github.com/lazyWH/less2html-ts"
    },
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.generateHTML"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "extension.generateHTML",
                "title": "generateHTML"
            }
        ],
        "menus":{
            "editor/context": [{
                "when": "editorHasSelection",
                "command": "extension.generateHTML"
            }]
        }, 
        "configuration": {
            "type": "object",
            "title": "less2html Configuration",
            "properties": {
                "less2html.nodeName": {
                    "type": "string",
                    "default": "div",
                    "description": "default nodename"
                },
                "less2html.className": {
                    "type": "string",
                    "default": "class",
                    "description": "default className"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
